<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.peseca.safedata">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/safedata_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/safedata_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Safedata">
        <activity
            android:name="com.peseca.safedata.Activities.EditActivity"
            android:exported="false"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.peseca.safedata.Activities.DetailsActivity"
            android:exported="false"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.peseca.safedata.Activities.AddPasswordActivity"
            android:exported="false"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.peseca.safedata.Activities.VaultCreationWarningActivity"
            android:exported="false"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.peseca.safedata.Activities.HelperActivity"
            android:exported="true"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.peseca.safedata.Activities.VaultCreationActivity"
            android:exported="false"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.peseca.safedata.Activities.VaultActivity"
            android:exported="false"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.peseca.safedata.Activities.MainActivity"
            android:exported="true"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>